<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhatWillWeEat2._0.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WhatWillWeEat2._0"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarTitleColor="#D7B76E"
    xmlns:vm="clr-namespace:WhatWillWeEat2._0.ViewModel"
    Title="WhatWillWeEat2._0">
    <TabBar>
        <Tab Title="Eating">
            <ShellContent Title="What Will We Eat?" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Recipes" Route="RecipesListPage">
            <ShellContent Title="Recipes" ContentTemplate="{DataTemplate local:RecipesListPage}"/>
        </Tab>
        <Tab Title="My Allergens" Route="MyAllergensPage">
            <ShellContent Title="My Allergens" ContentTemplate="{DataTemplate local:MyAllergensPage}"/>
        </Tab>
    </TabBar>
</Shell>
