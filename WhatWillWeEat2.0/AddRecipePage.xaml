<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatWillWeEat2._0.AddRecipePage"
             Title="Add A Recipe">
    <VerticalStackLayout>
        <Label Text="Name:" FontSize="Medium"/>
        <Entry Text="{Binding CurrentRecipe.Name, Mode=TwoWay}" FontSize="Medium"/>
        <Label Text="Description:" FontSize="Medium"/>
        <Entry Text="{Binding CurrentRecipe.Description, Mode=TwoWay}" FontSize="Medium"/>
        <Button Text="Save" FontSize="Medium" Margin="5"/>
    </VerticalStackLayout>
</ContentPage>